{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe etkin dosyayı derle",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "derleyici: cl.exe"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe etkin dosyayı derle",
            "command": "C:\\Program Files\\LLVM\\bin\\clang++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "derleyici: \"C:\\Program Files\\LLVM\\bin\\clang++.exe\""
        }
    ],
    "version": "2.0.0"
}